<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_password_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup">

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:hint="@string/passHint"
        android:inputType="textPassword"
        android:textColor="@color/rightText"
        android:textColorHighlight="@color/textSelection"
        android:textSize="16sp"
        android:theme="@style/AppTheme.EditText"
        tools:targetApi="o" />

    <ImageView
        android:id="@+id/passEditImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/passEditText"
        android:layout_alignTop="@id/passEditText"
        android:layout_alignBottom="@+id/passEditText"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/passImage"
        android:src="@drawable/pass" />

    <ImageButton
        android:id="@+id/showPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/passEditText"
        android:layout_alignEnd="@+id/passEditText"
        android:layout_alignBottom="@id/passEditText"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/showPassImage"
        android:src="@android:drawable/ic_menu_view" />

    <EditText
        android:id="@+id/passEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passEditText"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:hint="@string/passHint2"
        android:inputType="textPassword"
        android:textColor="@color/rightText"
        android:textColorHighlight="@color/textSelection"
        android:textSize="16sp"
        android:theme="@style/AppTheme.EditText"
        tools:targetApi="o" />

    <ImageView
        android:id="@+id/passEditImage2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/passEditText2"
        android:layout_alignTop="@id/passEditText2"
        android:layout_alignBottom="@+id/passEditText2"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/passImage"
        android:src="@drawable/pass" />

    <ImageButton
        android:id="@+id/showPass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/passEditText2"
        android:layout_alignEnd="@+id/passEditText2"
        android:layout_alignBottom="@+id/passEditText2"
        android:backgroundTint="@color/transparent"
        android:contentDescription="@string/showPassImage"
        android:src="@android:drawable/ic_menu_view" />

    <Button
        android:id="@+id/savePassEditButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passEditText2"
        android:background="@drawable/rounded_button"
        android:text="@string/saveButton"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryClear"
        android:textSize="18sp" />

</RelativeLayout>