<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageintro2"
            android:padding="10dp"
            app:srcCompat="@drawable/intro_2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/verranno_create_inizialmente_delle_categorie_di_default_giochi_siti_e_social_che_potrai_cancellare_oltre_che_crearne_di_nuove"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/all_interno_di_ciascuna_categoria_verranno_poi_inseriti_i_relativi_account"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/sar_possibile_dare_loro_un_ordine_a_piacere_semplicemente_trascinandole_da_una_parte_all_altra_o_ordinarle_in_maniera_crescente_e_decrescente"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>