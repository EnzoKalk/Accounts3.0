<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupRecovery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/recoveryUserText"
        android:textColor="@color/rightEditText"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/userSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:autofillHints=""
        android:theme="@style/AppTheme.EditText"
        tools:targetApi="o" />

    <ImageView
        android:id="@+id/userEditImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/userSpinner"
        android:layout_alignTop="@id/userSpinner"
        android:layout_alignBottom="@+id/userSpinner"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/userImage"
        android:src="@drawable/user" />

    <Button
        android:id="@+id/goOnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userSpinner"
        android:background="@drawable/rounded_button"
        android:text="@string/goOn"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryClear"
        android:textSize="18sp" />

</RelativeLayout>