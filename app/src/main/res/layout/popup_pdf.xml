<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupPdf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup">

    <TextView
        android:id="@+id/sortCategoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_PDF_Category"
        android:textColor="@color/rightText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/sortPDFCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortCategoryText"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/increasingCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.7"
            android:text="@string/increasing"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/decreasingCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.75"
            android:text="@string/decreasing"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/customizeCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.8"
            android:text="@string/customized"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/sortAccountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_PDF_Account"
        android:textColor="@color/rightText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortPDFCategory" />

    <RadioGroup
        android:id="@+id/sortPDFAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortAccountText"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/increasingAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.7"
            android:text="@string/increasing"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/decreasingAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.75"
            android:text="@string/decreasing"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/customizeAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.8"
            android:text="@string/customized"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/orientationPagePDF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/text_PDF2"
        android:textColor="@color/rightText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortPDFAccount" />

    <RadioGroup
        android:id="@+id/orientationPDF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orientationPagePDF">

        <RadioButton
            android:id="@+id/horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="@string/horizontal"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="@string/vertical"
            android:textSize="14sp" />
    </RadioGroup>


    <Button
        android:id="@+id/confirmation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_button"
        android:text="@string/Confirmation"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryClear"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orientationPDF" />
</androidx.constraintlayout.widget.ConstraintLayout>