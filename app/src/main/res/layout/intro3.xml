<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/sar_possibile_effettuare_mediante_la_barra_delle_ricerche_una_selezione_dell_account_che_ci_serve_specificandone_la_categoria"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageintro3"
            android:padding="10dp"
            app:srcCompat="@drawable/intro_3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/in_questo_modo_potrai_ricercare_i_tuoi_account_facilmente_senza_dover_scorrere_tra_una_categoria_e_l_altra"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>