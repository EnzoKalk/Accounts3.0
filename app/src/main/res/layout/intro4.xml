<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageintro4"
            android:padding="10dp"
            app:srcCompat="@drawable/intro_4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/estrai_i_pdf_dei_tuoi_account_in_maniera_da_poter_stampare_le_informazioni_di_ciascuno_di_loro_nuna_volta_selezionate_le_categorie_potrai_formalizzare_il_documento_con_il_layout_che_preferisci"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/imageintro4_2"
            android:padding="10dp"
            app:srcCompat="@drawable/intro_4_2" />
    </LinearLayout>
</RelativeLayout>