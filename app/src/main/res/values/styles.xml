<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="MyDarkToolbarStyle">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="SelectionSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimaryClear</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="colorControlNormal">@color/rightEditText</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/textSelection</item>
    </style>

    <style name="rounded_menu_style" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/rounded_menu</item>
        <item name="android:dropDownHorizontalOffset">-28dp</item>
        <item name="android:dropDownVerticalOffset">28dp</item>
    </style>

    <style name="rounded_menu_style_toolbar" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/rounded_menu</item>
        <item name="android:dropDownHorizontalOffset">-14dp</item>
        <item name="android:dropDownVerticalOffset">14dp</item>
    </style>

    <style name="rounded_menu_view" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/rounded_color</item>
    </style>

</resources>
